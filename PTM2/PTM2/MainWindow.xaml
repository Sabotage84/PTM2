<Window x:Name="MainWin" x:Class="PTM2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PTM2"
        xmlns:localc="clr-namespace:PTM2.equipment"
        mc:Ignorable="d"
        Title="PrimeTimeManager" Height="450" Width="800">
    <Window.Resources>
        <localc:BaseEquipments x:Key="be" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="367*"/>
        </Grid.ColumnDefinitions>
        <TabControl Margin="10,38,10,10" Grid.ColumnSpan="2">
            <TabItem Header="Прайс / КП+">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="PriceListLV" Grid.ColumnSpan="8" HorizontalAlignment="Left" Height="229" Margin="0,0,0,0.2" Grid.Row="1" Grid.RowSpan="8" VerticalAlignment="Bottom" Width="512" DataContext="{Binding Source={StaticResource be}}" ItemsSource="{Binding EqList}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Модель"  Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Path=FullName}" TextWrapping="Wrap" ></TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>

                                </GridViewColumn>
                                <GridViewColumn Header="Описание" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Path=Description}" TextWrapping="Wrap" Margin="5"
                         Foreground="DarkOrange"></TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=Price}" Width="100">Цена</GridViewColumn>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=K}" Width="20">К</GridViewColumn>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=InPrise}" Width="70">Вход</GridViewColumn>

                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button x:Name="AddToKP" Content="+" Grid.Column="9" HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Top" Width="64" Height="29" Grid.RowSpan="2" Click="AddToKP_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Счет">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Склад">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Menu Grid.ColumnSpan="2" Margin="0,10,0,0" Height="23" VerticalAlignment="Top">
            <MenuItem Header="Файл"/>
            <MenuItem Header="Настройки"/>
            <MenuItem Header="Справка"/>
        </Menu>

    </Grid>
</Window>
