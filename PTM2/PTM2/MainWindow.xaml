<Window x:Name="MainWin" x:Class="PTM2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PTM2"
        mc:Ignorable="d"
        Title="PrimeTimeManager" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="367*"/>
        </Grid.ColumnDefinitions>
        <TabControl Margin="10,38,10,10" Grid.ColumnSpan="2">
            <TabItem Header="Прайс / КП+">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Счет">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Склад">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Menu Grid.ColumnSpan="2" Margin="0,10,0,0" Height="23" VerticalAlignment="Top">
            <MenuItem Header="Файл"/>
            <MenuItem Header="Настройки"/>
            <MenuItem Header="Справка"/>
        </Menu>

    </Grid>
</Window>
